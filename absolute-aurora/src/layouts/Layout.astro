---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="https://www.dccomics.com/movies">Movies</a></li>
          <li><a href="https://www.dccomics.com/characters">Characters</a></li>
          <li><a href="https://www.dccomics.com/comics">Comics</a></li>
        </ul>
      </nav>
      <div class="hero-image">
        <img src="/Heading.png" alt="DC Comics" />
      </div>
    </header>
    <slot />
    <footer>
      <p class="footer_heading">Student Details</p>
      <p>Name: Paddy O'Hara<br />Student Number: A00001234</p>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --main-bg-color: cornflowerblue;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-size: 18px;
    font-family: Arial, Helvetica, sans-serif;
  }

  nav {
    background-color: var(--main-bg-color);
    padding: 0.2rem 0.5rem;
  }

  nav ul {
    padding: 0;
    margin: 0;
    list-style: none;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    text-align: center;
  }

  nav a {
    color: white;
    text-decoration: none;
  }

  header img {
    width: 100%;
  }

  .hero-image {
    max-height: 300px;
    overflow: hidden;
  }
  aside {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }

  @media screen and (max-width: 576px) {
    table {
      margin-top: 1rem;
    }
    nav ul {
      display: block;
      text-align: left;
    }
  }

  table {
    border: 1px solid #ccc;
    border-collapse: collapse;
    width: 100%;
  }

  table > caption {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  table > thead {
    border-bottom: 1px solid #ccc;
    background-color: white;
    font-weight: bold;
  }

  table > tbody > tr > td,
  table > thead > tr > td {
    padding: 0.2rem 0.5rem;
    font-size: 0.5rem;
  }

  table > tbody > tr:nth-child(odd) {
    background-color: #eee;
  }

  footer {
    background-color: var(--main-bg-color);
    text-align: center;
    color: white;
    padding: 0.2rem;
    margin-top: 0.5rem;
  }

  footer > p.footer_heading {
    font-size: 1.2rem;
    font-weight: bold;
  }
</style>
