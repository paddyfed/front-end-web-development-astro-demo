---
interface Props {
  src: string;
  title: string;
  body: string;
  alt: string;
}

const { src, title, body, alt } = Astro.props;
---

<section>
  <div>
    <img src={src} alt={alt} />
    <h2>{title}</h2>
  </div>
  <p>
    {body}
  </p>
</section>
<style>
  div {
    background-color: var(--main-bg-color);
    color: white;
    text-align: center;
  }

  img {
    max-width: 100%;
    max-height: 250px;
  }

  p {
    font-size: 0.7rem;
  }
</style>
